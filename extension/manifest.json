{
  "manifest_version": 3,
  "name": "Momentum",
  "version": "0.1.0",
  "description": "Turn any Gmail thread into scheduled outcomes: prep time-blocks, tasks, and ready-to-send draftsâ€”with follow-through and re-planning.",
  "icons": {
    "16": "icons/icon.png"
  },
  "action": {
    "default_title": "Momentum - From email to done",
    "default_icon": "icons/icon.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "identity",
    "notifications"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "config.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "css": [
        "momentum.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "config.js"
      ],
      "matches": [
        "https://mail.google.com/*"
      ]
    }
  ],
  "oauth2": {
    "client_id": "551935422718-rl00vc7idsjjl26j3jcpdrd7norl7e9a.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/gmail.compose",
      "https://www.googleapis.com/auth/calendar",
      "https://www.googleapis.com/auth/tasks"
    ]
  }
}